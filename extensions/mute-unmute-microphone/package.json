{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "mute-unmute-microphone",
  "version": "1.0.0",
  "title": "Mute Microphone",
  "description": "Mute Microphone Globally",
  "icon": "logo.png",
  "author": "parajulibkrm",
  "categories": [
    "System",
    "Communication"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "mute",
      "title": "Mute Microphone",
      "subtitle": "Sets microphone volume to 0%",
      "description": "Sets microphone volume to 0% to mute the microphone globally",
      "mode": "no-view"
    },{
      "name": "unmute",
      "title": "Unmute Microphone",
      "subtitle": "Sets microphone volume to 100%",
      "description": "Sets microphone volume to 100% to unmute the microphone globally",
      "mode": "no-view"
    }, {
      "name": "toggle",
      "title": "Toggle Microphone",
      "subtitle": "Toggle microphone volume/mute",
      "description": "Toggle microphone volume/mute",
      "mode": "no-view"
    },{
      "name":"show-mic",
      "title":"Show Mic Status on Menu Bar",
      "subtitle":"Microphone status on the menu bar",
      "description":"Get microphone volume",
      "interval": "1m",
      "mode": "menu-bar"
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.70.3",
    "@raycast/utils": "^1.13.5"
  },
  "devDependencies": {
    "@raycast/eslint-config": "^1.0.6",
    "@types/node": "20.8.10",
    "@types/react": "18.2.27",
    "eslint": "^8.51.0",
    "prettier": "^3.0.3",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}